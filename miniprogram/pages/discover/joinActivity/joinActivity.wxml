<view class="page">

  <view class="page__hd">
    <view class="page__title">{{activityInfo.location}}</view>
    <view class="page__desc">简介：{{activityInfo.intro}}</view>
  </view>

  <view class="page__bd">

    <view class="weui-cells__title">出队详情</view>
    <view class="weui-cells weui-cells_after-title">

      <view class="weui-cell">
        <view class="weui-cell__bd">领队姓名</view>
        <view class="weui-cell__ft">{{activityInfo.leader}}</view>
      </view>

      <view class="weui-cell">
        <view class="weui-cell__bd">领队手机</view>
        <view class="weui-cell__ft">{{activityInfo.phone}}</view>
      </view>

      <view class="weui-cell">
        <view class="weui-cell__bd">领队性别</view>
        <view class="weui-cell__ft">{{activityInfo.sex}}</view>
      </view>

      <view class="weui-cell">
        <view class="weui-cell__bd">领队入社时间</view>
        <view class="weui-cell__ft">{{activityInfo.joinTime}}</view>
      </view>

      <view class="weui-cell">
        <view class="weui-cell__bd">出发时间</view>
        <view class="weui-cell__ft">{{activityInfo.beginTime}}</view>
      </view>

      <view class="weui-cell">
        <view class="weui-cell__bd">返回时间</view>
        <view class="weui-cell__ft">{{activityInfo.endTime}}</view>
      </view>

      <view class="weui-cell">
        <view class="weui-cell__bd">报名截止时间</view>
        <view class="weui-cell__ft">{{activityInfo.stopTime}}</view>
      </view>

      <view class="weui-cell">
        <view class="weui-cell__bd">出队人数</view>
        <view class="weui-cell__ft">{{activityInfo.num}}</view>
      </view>

      <view class="weui-cell">
        <view class="weui-cell__bd">当前人数</view>
        <view class="weui-cell__ft">{{activityInfo.currentNum}}</view>
      </view>

      <view class="weui-cell">
        <view class="weui-cell__bd">出队预算</view>
        <view class="weui-cell__ft">{{activityInfo.budget}}</view>
      </view>

      <view class="weui-cell">
        <view class="weui-cell__bd">出队类型</view>
        <view class="weui-cell__ft">{{activityInfo.type}}</view>
      </view>

    </view>

    <view class="weui-cells__title">防鸽费（报名并转账给财务后报名成功）</view>
    <view class="weui-cells weui-cells_after-title">

      <view class="weui-cell">
        <view class="weui-cell__bd">财务姓名</view>
        <view class="weui-cell__ft">{{activityInfo.moneyName}}</view>
      </view>

      <view class="weui-cell">
        <view class="weui-cell__bd">财务支付宝</view>
        <view class="weui-cell__ft">{{activityInfo.moneyPhone}}</view>
      </view>

      <view class="weui-cell">
        <view class="weui-cell__bd">防鸽费</view>
        <view class="weui-cell__ft">{{activityInfo.money}}</view>
      </view>

    </view>

  <view class="btn-area">
    <button class="weui-btn" type="primary" bindtap="join">报名活动</button>
  </view>

  </view>

</view>
